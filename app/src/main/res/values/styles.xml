<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="sur_style">
        <item name="android:minHeight">@dimen/big_img_height</item>
        <item name="android:maxHeight">@dimen/big_img_height</item>
    </style>

    <style name="big_img_style">
        <item name="android:layout_margin">@dimen/img_margin</item>
        <item name="android:layout_width">@dimen/pop_img_size</item>
        <item name="android:layout_height">@dimen/pop_img_size</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="big_text_style">
        <item name="android:textSize">@dimen/big_text_size</item>
    </style>

    <style name="medium_text_style">
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="small_text_style">
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>
    <style name="img_list">
        <item name="android:layout_width">@dimen/list_img_width</item>
        <item name="android:layout_height">@dimen/list_img_height</item>
        <item name="android:layout_margin">@dimen/img_margin</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="big_portrait_img">
        <item name="android:layout_width">@dimen/big_img_height</item>
        <item name="android:layout_height">@dimen/big_img_height</item>
        <item name="android:layout_marginLeft">@dimen/img_margin</item>
        <item name="android:layout_marginRight">@dimen/img_margin</item>
        <item name="android:layout_marginBottom">@dimen/img_margin</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="checkbox">
        <item name="android:layout_width">@dimen/checkbox_size</item>
        <item name="android:layout_height">@dimen/checkbox_size</item>
        <item name="android:layout_marginTop">@dimen/checkbox_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_vertical_margin</item>
    </style>


</resources>
